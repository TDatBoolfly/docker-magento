#!/bin/bash
[ -z "$1" ] && echo "Please specify a directory or file to copy to container (ex. vendor, --all)" && exit

source bin/check-root-work-dir

REAL_SRC=$(cd -P "src/" && pwd)
if [ "$1" == "--all" ]; then
  docker cp "$REAL_SRC/$ROOT_WORK_DIR/" "$(docker-compose ps -q phpfpm|awk '{print $1}')":/var/www/html/$ROOT_WORK_DIR
  echo "Completed copying all files from host to container"
  bin/fixowns
  bin/fixperms
else
  if [ -f "$REAL_SRC/$1" ]; then
    docker cp "$REAL_SRC/$ROOT_WORK_DIR/${1}" "$(docker-compose ps -q phpfpm|awk '{print $1}')":/var/www/html/$ROOT_WORK_DIR/"$1"
  else
    docker cp "$REAL_SRC/$ROOT_WORK_DIR/${1}" "$(docker-compose ps -q phpfpm|awk '{print $1}')":/var/www/html/$ROOT_WORK_DIR/"$(dirname "$1")"
  fi
  echo "Completed copying $1 from host to container"
  bin/fixowns "$ROOT_WORK_DIR/$1"
  bin/fixperms "$ROOT_WORK_DIR/$1"
fi
